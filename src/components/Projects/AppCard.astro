---
import { Icon } from "astro-icon/components";

type Props = {
	name: string;
	desc: string;
	appLink: string;
	codeLink: string;
	badges: Array<(_props: Record<string, any>) => any>;
	isInDev: boolean;
};

const { name, desc, appLink, codeLink, badges, isInDev } = Astro.props;
---

<div class="flex rounded-xl bg-white/90 shadow-xl backdrop-blur">
	<div class="flex flex-col px-6 py-8 sm:px-8 md:px-6 lg:px-8">
		<div class="mb-2 flex items-center justify-between">
			<h1 class="text-xl font-semibold sm:text-2xl md:text-3xl">{name}</h1>
			{isInDev && <div class="h-fit rounded bg-slate-300 px-2 py-1 text-xs">In development</div>}
		</div>

		<p class="mb-8 leading-7 text-slate-800">{desc}</p>

		<div class="flex flex-wrap gap-2 mt-auto mb-6">
			{badges.map((Badge) => <Badge />)}
		</div>

		<div class="flex gap-4 text-slate-800">
			<a
				class="transition-transform duration-[50ms] hover:text-blue-600 active:translate-y-0.5"
				href={appLink}
				target="_blank"
				rel="noreferrer"
				title="Visit app"
			>
				<Icon name="tabler:external-link" size="28" stroke="1.5" />
			</a>
			<a
				class="transition-transform duration-[50ms] hover:text-blue-600 active:translate-y-0.5"
				href={codeLink}
				target="_blank"
				rel="noreferrer"
				title="Code repository"
			>
				<Icon name="tabler:brand-github" size="28" stroke="1.5" />
			</a>
		</div>
	</div>
</div>
